{
  "compilerOptions": {
    "target": "ES2022",              // JS version for output
    "module": "ESNext",              // Module system
    "moduleResolution": "node",      // Resolve node modules
    "outDir": "dist",                // Compiled JS files go here
    "strict": true,                  // Enable strict type checking
    "esModuleInterop": true,         // Allows import of commonjs modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true             // Skip type checking of node_modules
  },
  "include": ["src/**/*.ts"]
}